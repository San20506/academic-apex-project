{
  "name": "academic-apex",
  "services": [
    {
      "name": "web-ui",
      "source": {
        "type": "local",
        "path": "./agentforge_academic_apex"
      },
      "build": {
        "commands": [
          "pip install -r requirements.txt"
        ]
      },
      "deploy": {
        "startCommand": "python web_ui.py",
        "healthcheckPath": "/",
        "restartPolicyType": "ON_FAILURE"
      },
      "env": {
        "PORT": "5000",
        "OLLAMA_HOST": "http://localhost:11434",
        "WEB_UI_PORT": "5000",
        "DEBUG": "false"
      }
    }
  ]
}
